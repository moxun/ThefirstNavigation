<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_325"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/item_image"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_gravity="center"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginLeft="@dimen/dp_10"
                android:orientation="vertical">
                    <TextView
                        android:id="@+id/item_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="通航爱好者"
                        android:textColor="@color/colorBlue"
                        android:layout_marginTop="@dimen/dp_5"
                        android:textSize="@dimen/sp_14" />
                    <TextView
                        android:id="@+id/item_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_10"
                        android:layout_marginTop="@dimen/dp_5"
                        android:text="十五分钟前"/>
                </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="@dimen/dp_340"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/item_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_17"
                android:lines="3"

                android:ellipsize="end"
                android:textColor="@color/colorblack"
                android:text="商务飞机一般体积较小，可乘坐人数一般不超过15人"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_160"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/item_tu1"
                android:layout_width="@dimen/dp_110"
                android:layout_height="@dimen/dp_150"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_gravity="center"/>
            <ImageView
                android:id="@+id/item_tu2"
                android:layout_width="@dimen/dp_110"
                android:layout_height="@dimen/dp_150"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_gravity="center"/>
            <ImageView
                android:id="@+id/item_tu3"
                android:layout_width="@dimen/dp_110"
                android:layout_height="@dimen/dp_150"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="@dimen/dp_123"
                android:layout_height="@dimen/dp_50"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/item_read"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorblack"
                    android:textSize="@dimen/sp_17"
                    android:text="158"/>
                <TextView
                    android:id="@+id/read"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_gray"
                    android:textSize="@dimen/sp_16"
                    android:text="阅读"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="@dimen/dp_123"
                android:layout_height="@dimen/dp_50"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/item_ping"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorblack"
                    android:textSize="@dimen/sp_17"
                    android:text="26"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_gray"
                    android:textSize="@dimen/sp_16"
                    android:text="评论"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="@dimen/dp_123"
                android:layout_height="@dimen/dp_50"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/item_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorblack"
                    android:textSize="@dimen/sp_17"
                    android:text="88"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_gray"
                    android:textSize="@dimen/sp_16"
                    android:text="点赞"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
