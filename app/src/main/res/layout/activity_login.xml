<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image_tool"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:src="@drawable/login_cancle"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dp_20"
        android:layout_gravity="center"
        android:text="欢迎登录第一通航"/>
    <EditText
        android:id="@+id/activity_ed_phone"
        android:layout_width="@dimen/dp_350"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_40"
        android:hint="请输入手机号"
        android:layout_gravity="center"/>
    <RelativeLayout
        android:layout_gravity="center"
        android:layout_width="@dimen/dp_350"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/activity_ed_code"
            android:layout_width="@dimen/dp_350"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_30"
            android:hint="请输入验证码"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="@dimen/dp_1"
            android:layout_height="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_270"
            android:layout_marginTop="@dimen/dp_40"
            android:background="#a4a4a4"/>
        <TextView
            android:id="@+id/activity_te_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_275"
            android:layout_marginTop="@dimen/dp_40"
            android:textColor="#222222"
            android:text="获取验证码"/>
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="未注册手机验证后自动登录"/>


        <ImageView
            android:layout_marginTop="@dimen/dp_20"
            android:id="@+id/iv"
            android:saveEnabled="true"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/denglu" />




    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal">
        <CheckBox
            android:id="@+id/activity_check"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="我已阅读并同意"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#3885af"
            android:text="“用户协议”"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_100"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <TextView
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_1"
            android:layout_marginTop="@dimen/dp_10"
            android:background="#55222222"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#3885af"
            android:textSize="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="第三方账号快速登录"/>
        <TextView
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_1"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="#55222222"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/activity_iv_wechat"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_marginRight="@dimen/dp_50"
            android:src="@drawable/wechat_image"/>
        <ImageView
            android:id="@+id/activity_iv_qq"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_marginRight="@dimen/dp_50"
            android:src="@drawable/qq_image"/>
        <ImageView
            android:id="@+id/activity_iv_sina"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:src="@drawable/sina_image"/>
    </LinearLayout>
</LinearLayout>
