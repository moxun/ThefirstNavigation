<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_285">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_285"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40">
            <TextView
                android:id="@+id/item_userTopic_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_gray"
                android:textSize="@dimen/sp_14"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_centerVertical="true"
                android:text="2019-2-15"/>
            <TextView
                android:id="@+id/item_userTopic_bianJi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="编辑"
                android:textSize="@dimen/sp_13"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_40"
                android:textColor="@color/colorBlue"/>
            <ImageView
                android:layout_width="@dimen/dp_13"
                android:layout_height="@dimen/dp_13"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_20"
                android:src="@mipmap/usertopic_write"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_height="@dimen/dp_50">
            <TextView
                android:id="@+id/item_userTopic_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_17"
                android:textColor="@color/colorblack"
                android:maxLines="2"
                android:text="商务飞机一般体积较小，可乘坐人数一般不超过15人"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_120"
            android:orientation="horizontal">
            <ImageView

                android:id="@+id/item_userTopic_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_110"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:scaleType="centerCrop"
                android:layout_gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="@dimen/dp_123"
                android:layout_height="@dimen/dp_50"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/item_userTopic_readSize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorblack"
                    android:textSize="@dimen/sp_17"
                    android:text="158"/>
                <TextView
                    android:id="@+id/item_topic_read"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_gray"
                    android:textSize="@dimen/sp_16"
                    android:text="阅读"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="@dimen/dp_123"
                android:layout_height="@dimen/dp_50"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/item_userTopic_commentSize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorblack"
                    android:textSize="@dimen/sp_17"
                    android:text="26"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_gray"
                    android:textSize="@dimen/sp_16"
                    android:text="评论"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="@dimen/dp_123"
                android:layout_height="@dimen/dp_50"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/item_userTopic_likeSize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorblack"
                    android:textSize="@dimen/sp_17"
                    android:text="88"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_gray"
                    android:textSize="@dimen/sp_16"
                    android:text="点赞"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_12"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_5"
                android:background="@color/bg_focus"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="@color/backgroud_select"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_5"
                android:background="@color/bg_focus"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
