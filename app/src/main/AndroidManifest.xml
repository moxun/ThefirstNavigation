        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.HeadImageActivity"/>
        <activity android:name=".activity.InformationActivity"/>
        <activity android:name=".activity.SelecterActivity"/>
        <activity android:name=".activity.SearchActivity"/>
        <activity android:name=".activity.DetailsActivity"/>
        <activity android:name=".activity.TopicAvtivity"/>
        <activity android:name=".activity.ClassifyActivity"/>
        <activity android:name=".activity.InsertTopicAvtivity"/>
        <activity android:name=".activity.MytopicActicity"/>
        <activity android:name=".activity.UpdateInfoActivity"/>
        <activity android:name=".activity.ExitActivity"/>
        <activity android:name=".activity.IntroActivity"/>
        <activity android:name=".activity.FollowActivity"/>
        <activity android:name=".activity.FavouriteActivity"/>
        <activity android:name=".activity.MoreFollowActivity"/>
        <activity android:name=".activity.CommentActivity"/>
        <activity android:name=".activity.ListNotifyActivity"/>
        <activity android:name=".activity.MineTopicActivity"/>
